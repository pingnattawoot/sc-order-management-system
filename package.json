{
  "name": "sc-order-management-system",
  "version": "1.0.0",
  "private": true,
  "description": "ScreenCloud Order Management System for SCOS devices",
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev": "pnpm --filter api dev & pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "test": "pnpm --filter api test",
    "test:coverage": "pnpm --filter api test:coverage",
    "load-test": "k6 run load-tests/order-submission.js",
    "load-test:spike": "k6 run load-tests/concurrent-orders.js",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "pnpm install && pnpm docker:up && pnpm db:migrate && pnpm db:seed",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:seed": "pnpm --filter api db:seed",
    "db:studio": "pnpm --filter api db:studio",
    "deploy:api": "railway up --service api",
    "deploy:web": "vercel --prod",
    "deploy": "pnpm deploy:api && pnpm deploy:web"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  }
}
