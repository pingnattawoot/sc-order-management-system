{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "ScreenCloud Order Management System - GraphQL API",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@pothos/core": "^4.3.0",
    "@pothos/plugin-prisma": "^4.3.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.10.6",
    "nanoid": "^5.0.9",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.21.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "eslint": "^9.17.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.1.0",
    "testcontainers": "^10.21.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
